<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="8sp"
    app:cardCornerRadius="15sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/pop_up_tv_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/architects_daughter"
            android:text="Fish Post Summary"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pop_up_tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pop_up_tv_0"
            android:layout_marginTop="5sp"
            android:fontFamily="@font/architects_daughter"
            android:text="Fish Name: "
            android:textColor="@color/colorSecondary"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pop_up_fish_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pop_up_tv_0"
            android:layout_marginTop="5sp"
            android:layout_toEndOf="@id/pop_up_tv_1"
            android:fontFamily="@font/architects_daughter"
            android:text="Fish Name"
            android:textColor="@color/colorSecondary"
            android:textSize="16sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/pop_up_tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pop_up_tv_1"
            android:layout_marginTop="5sp"
            android:fontFamily="@font/architects_daughter"
            android:text="Fish Price: "
            android:textColor="@color/colorSecondary"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pop_up_fish_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pop_up_tv_1"
            android:layout_marginTop="5sp"
            android:layout_toEndOf="@id/pop_up_tv_2"
            android:fontFamily="@font/architects_daughter"
            android:text="Fish Name: "
            android:textColor="@color/colorSecondary"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pop_up_tv_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pop_up_tv_2"
            android:layout_marginTop="5sp"
            android:fontFamily="@font/architects_daughter"
            android:text="Fish Availability: "
            android:textColor="@color/colorSecondary"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pop_up_fish_availability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pop_up_fish_price"
            android:layout_marginTop="5sp"
            android:layout_toEndOf="@id/pop_up_tv_3"
            android:fontFamily="@font/architects_daughter"
            android:text="Fish Name: "
            android:textColor="@color/colorSecondary"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pop_up_tv_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pop_up_tv_3"
            android:layout_marginTop="5sp"
            android:fontFamily="@font/architects_daughter"
            android:text="Fish Location: "
            android:textColor="@color/colorSecondary"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pop_up_fish_loaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pop_up_fish_availability"
            android:layout_marginTop="5sp"
            android:layout_toEndOf="@id/pop_up_tv_4"
            android:fontFamily="@font/architects_daughter"
            android:text="Fish Name: "
            android:textColor="@color/colorSecondary"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pop_up_tv_4"
            android:layout_gravity="center"
            android:layout_marginTop="5sp"
            android:gravity="center">

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/pop_up_cancel_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="25sp"
                android:layout_marginBottom="10sp"
                android:layout_marginStart="2sp"
                android:ems="7"
                android:fontFamily="@font/architects_daughter"
                android:gravity="center"
                android:text="Cancel"
                android:textColor="@color/colorPrimary"

                app:backgroundTint="@color/color_White" />

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/pop_up_confirm_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:fontFamily="@font/architects_daughter"
                android:gravity="center"
                android:ems="7"
                android:text="SUBMIT"
                android:layout_marginEnd="2sp"
                android:textColor="@color/color_White"
                android:textStyle="bold"
                app:backgroundTint="@color/colorPrimary" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
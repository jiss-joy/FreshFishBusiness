<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SelectNewFishActivity">

    <TextView
        android:id="@+id/select_tv_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/architects_daughter"
        android:gravity="center"
        android:padding="8sp"
        android:text="Select the fish type"
        android:textColor="@color/colorPrimary"
        android:textSize="22sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/select_fish_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/select_tv_1"
        android:padding="10sp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/select_fish_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        app:backgroundTint="@color/colorPrimary"
        app:rippleColor="@color/color_White"
        app:tint="@color/color_White"
        android:src="@drawable/next_btn"
        android:layout_marginEnd="16sp"
        android:layout_marginBottom="16sp" />

</RelativeLayout>